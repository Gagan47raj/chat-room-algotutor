type Message {
    sender: String
    content: String
    timeStamp: String
}

type Room {
    roomId: String
    messages(page: Int = 0, size: Int = 20): [Message]
}

type Query {
    room(roomId: String!): Room
    rooms: [Room]
}

type Mutation {
    createRoom(roomId: String!): Room
    sendMessage(roomId: String!, sender: String!, content: String!): Message
}

type Subscription {
    messageSent(roomId: String!): Message
}
